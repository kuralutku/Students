
@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

<div class="row">
    @foreach (var item in @Model)
    {
        <div class="card col-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Surname TL</p>
                <a asp-controller="Students" asp-action="Info" asp-route-id="@item.Id" class="btn btn-primary">Student</a>
            </div>
        </div>
    }
</div>

